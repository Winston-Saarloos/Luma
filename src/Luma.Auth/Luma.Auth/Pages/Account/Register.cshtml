@page
@model Luma.Auth.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-slate-950 px-4">
    <div class="w-full max-w-md bg-slate-900 border border-slate-800 rounded-2xl shadow-xl p-8">
        <h1 class="text-2xl font-bold text-slate-100 mb-6 text-center">Create an Account</h1>

        <form method="post" class="space-y-5">
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-slate-300 mb-1"></label>
                <input asp-for="Input.Email"
                       class="w-full rounded-lg bg-slate-950 border border-slate-700 px-3 py-2 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/30 outline-none" />
                <span asp-validation-for="Input.Email" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Input.DisplayName" class="block text-sm font-medium text-slate-300 mb-1"></label>
                <input asp-for="Input.DisplayName"
                       class="w-full rounded-lg bg-slate-950 border border-slate-700 px-3 py-2 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/30 outline-none" />
                <span asp-validation-for="Input.DisplayName" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-slate-300 mb-1"></label>
                <input asp-for="Input.Password" type="password"
                       class="w-full rounded-lg bg-slate-950 border border-slate-700 px-3 py-2 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/30 outline-none" />
                <span asp-validation-for="Input.Password" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-slate-300 mb-1"></label>
                <input asp-for="Input.ConfirmPassword" type="password"
                       class="w-full rounded-lg bg-slate-950 border border-slate-700 px-3 py-2 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/30 outline-none" />
                @* <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm"></span> *@
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All"
                     class="mb-4 rounded-lg border border-red-600 bg-red-900/50 px-4 py-3 text-sm text-red-200">
                </div>
            }

            <button type="submit"
                    class="w-full rounded-lg bg-indigo-600 hover:bg-indigo-500 transition-colors px-4 py-2 font-medium text-white shadow-md">
                Register
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
